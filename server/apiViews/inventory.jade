form(name='inventoryForm', ng-controller='inventoryForm')
  .table-inventory.table-responsive
    table.table.table-striped.table-inverse
      thead
        tr
          th Item
          th Item Code
          th Price/Unit
          th Description
      tbody
        tr(ng-repeat='item in inventory')
          td
            input.form-control(type='text', value='{{item.itemName}}')
          td
            input.form-control(type='text', value='{{item.code}}')
          td
            input.form-control(type='text', value='{{item.price}}')
          td
            input.form-control(type='text', value='{{item.desc}}')